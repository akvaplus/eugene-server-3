<% layout('layout') %>
<% title = 'Session Details' %>
<% activePage = 'sessions' %>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Session Details</h6>
        <div>
            <a href="/session/<%= session._id %>/edit" class="btn btn-primary btn-sm">Edit Session</a>
            <form action="/session/<%= session._id %>?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this session?')">Delete Session</button>
            </form>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <strong>ID:</strong> <%= session._id %>
                </div>
                <div class="mb-3">
                    <strong>Name:</strong> <%= session.name %>
                </div>
                <div class="mb-3">
                    <strong>User:</strong> <%= session.userId ? `${session.userId.firstName} ${session.userId.lastName}` : 'N/A' %>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <strong>Start Time:</strong> <%= new Date(session.startTime).toLocaleString() %>
                </div>
                <div class="mb-3">
                    <strong>End Time:</strong> <%= session.endTime ? new Date(session.endTime).toLocaleString() : 'N/A' %>
                </div>
                <div class="mb-3">
                    <strong>Status:</strong> <%= session.status %>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <strong>Created:</strong> <%= new Date(session.createdAt).toLocaleString() %>
            <br>
            <strong>Last Updated:</strong> <%= new Date(session.updatedAt).toLocaleString() %>
        </div>
        <div class="mt-4">
            <a href="/session" class="btn btn-secondary">Back to List</a>
            <% if (session.userId) { %>
                <a href="/user/<%= session.userId._id %>" class="btn btn-info">View User</a>
            <% } %>
            <a href="/session/user/<%= session.userId._id %>" class="btn btn-primary">View User Sessions</a>
        </div>
    </div>
</div> 